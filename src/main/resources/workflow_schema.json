{
  "$schema": "http://json-schema.org/draft/2020-12/schema#",
  "title": "Workflow",
  "type": "object",
  "properties": {
    "commands": {
      "type": "array",
      "minItems": 0,
      "maxItems": 100,
      "items": {
        "$ref": "#/$defs/command"
      }
    },
    "finallyCommands": {
      "type": "array",
      "minItems": 0,
      "maxItems": 10,
      "items": {
        "$ref": "#/$defs/command"
      }
    }
  },
  "$defs": {
    "command": {
      "type": "object",
      "required": [
        "name",
        "class"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the command."
        },
        "class": {
          "enum": [
            "database",
            "email",
            "groovy",
            "httpRequest",
            "java",
            "loop",
            "nothing",
            "print",
            "sleep",
            "sshExec",
            "sshShell",
            "waitUntilSubPasses"
          ]
        },
        "subcommands": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/command"
          }
        },
        "ifs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/expression"
          }
        },
        "inputs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/expression"
          }
        },
        "asserts": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/expression"
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/expression"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "class": {
                "const": "loop"
              }
            }
          },
          "then": {
            "required": [
              "subcommands"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "class": {
                "const": "waitUntilSubPasses"
              }
            }
          },
          "then": {
            "required": [
              "subcommands"
            ]
          }
        }
      ],
      "additionalProperties": false
    },
    "expression": {
      "type": "object",
      "required": [
        "name",
        "value"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the expression."
        },
        "value": {
          "type": [
            "any"
          ],
          "description": "The value of the expression."
        },
        "class": {
          "enum": [
            "groovy",
            "java",
            "plain",
            "spel"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}