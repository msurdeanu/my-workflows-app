{
  "$schema": "http://json-schema.org/draft/2020-12/schema#",
  "title": "Workflow",
  "type": "object",
  "properties": {
    "commands": {
      "type": "array",
      "items": { "$ref": "#/$defs/command" }
    },
    "finallyCommands": {
      "type": "array",
      "items": { "$ref": "#/$defs/command" }
    }
  },
  "$defs": {
    "command": {
      "type": "object",
      "required": [ "name", "@type" ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the command."
        },
        "@type": {
          "enum": ["groovy", "httpRequest", "nothing", "print", "sleep", "sshExec", "sshShell", "waitUntilSubPasses"]
        },
        "ifs": {
          "type": "array",
          "items": { "$ref": "#/$defs/expression" }
        },
        "inputs": {
          "type": "array",
          "items": { "$ref": "#/$defs/expression" }
        },
        "asserts": {
          "type": "array",
          "items": { "$ref": "#/$defs/expression" }
        },
        "outputs": {
          "type": "array",
          "items": { "$ref": "#/$defs/expression" }
        }
      }
    },
    "expression": {
      "type": "object",
      "required": [ "name", "value" ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the expression."
        },
        "value": {
          "type": ["any"],
          "description": "The value of the expression."
        },
        "@type": {
          "enum": ["groovy", "plain", "spel"]
        }
      }
    }
  }
}